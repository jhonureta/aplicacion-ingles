<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_introduccionuno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.personal.ingles_aplicacion.introduccionuno">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/bu"
                />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"

                android:layout_width="268dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:id="@+id/progressBar2" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cuál de estas es Ecuador?"
            android:textSize="20dp"


            android:textColor="@android:color/background_dark"
            android:textAlignment="center" />


    </LinearLayout>



    <LinearLayout

        android:orientation = "horizontal"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="40dp"

        >
        <android.support.v7.widget.CardView
            android:clickable = "true"
            android:id="@+id/agendar"
            android:onClick="digitar"
            android:background="@drawable/color"


            android:layout_width = "142dp"
            android:layout_height = "140dp"
            android:layout_margin = "10dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:orientation = "vertical"
                android:background="@drawable/color"




                android:gravity="center">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding = "10dp"
                    android:onClick="digitar"

                    android:src="@drawable/ecuador"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ECUADOR"
                    android:onClick="click1"
                    android:id="@+id/ecuador"
                    android:layout_gravity="center"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:clickable = "true"
            android:id="@+id/card_anularcit"
            android:onClick="digitar2"

            android:layout_width = "142dp"
            android:layout_height = "140dp"
            android:layout_margin = "10dp">
            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:orientation = "vertical"
                android:background="@color/verde"

                android:gravity="center">
                <ImageView
                    android:layout_width="124dp"
                    android:layout_height="120dp"
                    android:padding = "10dp"
                    android:onClick="digitar2"
                    android:src="@drawable/brazil"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BRAZIL"
                    android:onClick="click2"
                    android:id="@+id/brazil"
                    android:layout_gravity="center" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout

        android:orientation = "horizontal"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="20dp"

        >


        <android.support.v7.widget.CardView
            android:clickable = "true"

            android:id="@+id/card_informacion"
            android:layout_width = "142dp"
            android:layout_height = "140dp"
            android:onClick="digitar3"

            android:layout_margin = "10dp">
            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:orientation = "vertical"


                android:background="@color/naranja"

                android:gravity="center">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding = "10dp"
                    android:onClick="digitar3"
                    android:src="@drawable/alemania"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="GERMANY"
                    android:onClick="click3"
                    android:id="@+id/alemania"
                    android:layout_gravity="center" />



            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:clickable = "true"
            android:id="@+id/ubicacion"
            android:onClick="digitar4"

            android:layout_width = "142dp"
            android:layout_height = "140dp"
            android:layout_margin = "10dp">
            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:orientation = "vertical"
                android:background="@color/rojo"

                android:gravity="center">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding = "10dp"
                    android:onClick="digitar4"
                    android:src="@drawable/francia"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="FRANCE"
                    android:onClick="click4"
                    android:id="@+id/francia"
                    android:layout_gravity="center" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:layout_marginTop="45dp"
        android:id="@+id/registrar"

        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:text="CALIFICAR"
        android:onClick="checkear"
        android:textColor="#000"
        android:background="@drawable/oval"

        />

</LinearLayout>
