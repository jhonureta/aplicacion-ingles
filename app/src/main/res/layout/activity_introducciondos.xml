<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_introducciondos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.personal.ingles_aplicacion.introducciondos">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/bu"
                />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"

                android:layout_width="268dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:id="@+id/progressBar2" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traduce esta oración"
            android:textSize="25dp"
            android:textColor="@android:color/background_dark" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reci"
            android:layout_marginLeft="280dp"
            android:onClick="regresar1"
            android:layout_marginTop="-30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="mostrar"
                android:src="@drawable/audio"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I was born in Guayaquil"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/remarco"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="regresar1"
                    android:layout_marginTop="20dp"
                    android:id="@+id/arriv1"

                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="25dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/arriv2"
                    android:layout_marginLeft="10dp"

                    android:textAlignment="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="25dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/arriv3"

                    android:textAlignment="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="25dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/arriv4"

                    android:textAlignment="center" />







            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"

                android:layout_gravity="center"
                android:textAlignment="center"
                >



                <TextView

                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" nací "
                    android:background="@drawable/remarcodos"
                    android:textSize="30dp"
                    android:onClick="posicion"
                    android:id="@+id/texto"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Yo "
                    android:layout_marginLeft="20dp"
                    android:id="@+id/texto2"

                    android:textSize="30dp"
                    android:background="@drawable/remarcodos"

                    android:onClick="posicion2"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Guayaquil "
                    android:layout_marginLeft="20dp"
                    android:id="@+id/texto3"
                    android:background="@drawable/remarcodos"


                    android:textSize="30dp"

                    android:onClick="posicion3"

                    />





            </LinearLayout>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" en "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                android:id="@+id/texto4"
                android:background="@drawable/remarcodos"


                android:textSize="30dp"

                android:onClick="posicion4"

                />


            <Button

                android:id="@+id/registrar"
                android:layout_marginTop="45dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:text="CALIFICAR"

                android:onClick="verificar"
                android:textColor="#000"
                android:background="@drawable/oval"

                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
