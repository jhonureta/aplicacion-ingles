<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_introduccioncuatro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.personal.ingles_aplicacion.introduccioncuatro">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/bu"
            />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"

            android:layout_width="268dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="20dp"
            android:id="@+id/progressBar2" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENCUENTRA LOS PARES"
        android:textSize="25dp"

        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif" />

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical"

        android:background="@drawable/marco"
        >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-3dp"

        >

        <Button
            android:layout_marginLeft="35dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="DIA"
            android:onClick="comparar1"
            android:id="@+id/txt1"
            android:layout_gravity="center"

            android:textAlignment="center" />
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/txt2"

            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:onClick="comparar2"

            android:layout_gravity="center"
            android:text="HELLO"

            android:textAlignment="center" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="DAY"
            android:onClick="comparar3"

            android:id="@+id/txt3"
            android:layout_gravity="center"

            android:textAlignment="center"
            />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-3dp"
        >

        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="HOLA"
            android:layout_marginLeft="35dp"

            android:onClick="comparar4"
            android:id="@+id/txt4"
            android:layout_gravity="center"

            android:textAlignment="center" />
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/txt6"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="I"
            android:onClick="comparar6"

            android:layout_gravity="center"

            android:textAlignment="center" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="YO"
            android:onClick="comparar7"

            android:id="@+id/txt7"
            android:layout_gravity="center"

            android:textAlignment="center"
            />





    </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

  <ImageView
      android:layout_width="140dp"
      android:layout_height="40dp"
     android:layout_marginLeft="-50dp"
      android:id="@+id/finalizar"
      android:layout_marginTop="10dp"
      android:src="@drawable/logout"


      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar nivel"
        android:layout_marginTop="14dp"
        android:textSize="20dp"


        android:layout_marginLeft="-35dp"
        android:fontFamily="serif"
        android:textColor="@android:color/background_dark" />
</LinearLayout>
</LinearLayout>
